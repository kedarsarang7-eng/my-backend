# Copy from sls/backend/.env — both backends share the same DB and Cognito pool
DATABASE_URL=postgresql://user:password@localhost:5432/bizmate
DB_SSL=false

# Cognito (same pool as sls/backend and my-backend)
COGNITO_USER_POOL_ID=ap-south-1_XXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxx
COGNITO_DESKTOP_CLIENT_ID=
COGNITO_MOBILE_CLIENT_ID=
COGNITO_ADMIN_CLIENT_ID=

# Redis (optional — rate limiter falls back gracefully if unavailable)
REDIS_URL=redis://localhost:6379

# S3 Storage (tenant-scoped file uploads — same bucket as sls/backend)
S3_BUCKET_NAME=dukanx-tenant-storage
S3_REGION=ap-south-1

# DB Pool (EC2 t2.micro: keep low — 8+8+5=21 of ~60 max)
DB_MAX_CONNECTIONS=8

# CORS (comma-separated origins for Customer App + Staff App)
APP_CORS_ORIGIN=http://localhost:3000

# Server
APP_BACKEND_PORT=5000
NODE_ENV=development
