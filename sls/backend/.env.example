# ============================================
# SLS Backend - Environment Configuration
# ============================================

# Server
PORT=4000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/sls_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sls_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=sls:

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AES-256 Encryption (for license key encryption at rest)
AES_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# RSA Key Paths (for offline activation)
RSA_PRIVATE_KEY_PATH=./keys/private.pem
RSA_PUBLIC_KEY_PATH=./keys/public.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Admin Seed (first-run only)
ADMIN_EMAIL=admin@sls.local
ADMIN_PASSWORD=ChangeThisPassword!

# Geo-fencing (MaxMind GeoIP - optional)
GEOIP_DB_PATH=./data/GeoLite2-Country.mmdb

# ── Cognito (shared pool with app-backend & my-backend) ──────────────────
COGNITO_USER_POOL_ID=ap-south-1_XXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_DESKTOP_CLIENT_ID=
COGNITO_MOBILE_CLIENT_ID=
COGNITO_ADMIN_CLIENT_ID=
COGNITO_REGION=ap-south-1

# ── S3 Storage (tenant-scoped file uploads) ──────────────────────────────
S3_BUCKET_NAME=dukanx-tenant-storage
S3_REGION=ap-south-1

# ── DynamoDB (License Keys table) ────────────────────────────────────────
DYNAMODB_TABLE_NAME=LicenseKeys
DYNAMODB_REGION=ap-south-1

# ── CORS ─────────────────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000
